<div class="navbar">
  <div class="container character-info">
    <div class="character-name">
      <%= characterData ? characterData.name : "No character loaded" %>
    </div>
    <div class="class-picture">
      <% if (characterData && characterData.classImageUrl) { %>
        <img src="<%= characterData.classImageUrl %>" alt="Class Picture">
      <% } else { %>
        <img src="/images/default.png" alt="No class image">
      <% } %>
    </div>
    
   <button class="nav-item" data-target="char-inventory-container" id="show-char-inventory-btn">Character & Inventory</button>

    <button class="nav-item" data-target="skill-tree-container" id="skills-nav">Skill Tree</button>
  </div>

  <div class="container castle">
    <button class="nav-item">Enter Castle</button>
  </div>

  <div class="container skills">
    <p>Idle skills</p>
    <button class="nav-item">Fishing</button>
    <button class="nav-item">Scouting</button>
    <button class="nav-item">Wood chopping</button>
    <button class="nav-item">Praying</button>
    <button class="nav-item">Mount riding</button>
    <button class="nav-item">Social</button>
    <button class="nav-item">Carving</button>
  </div>

  <div class="container activities">
    <p>Activities</p>
    <button class="nav-item">Dungeons</button>
    <button class="nav-item">Monster hunting</button>
    <button class="nav-item">Arena</button>
    <button class="nav-item">Endless tower</button>
  </div>

  <div class="container exit">
    <a href="/" class="nav-item">Back to menu</a>
  </div>
</div>
